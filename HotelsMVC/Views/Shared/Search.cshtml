@model string

<script type="text/javascript">
    $(document).ready(function () {
        $("#cityAutocomplete").autocomplete({
                source: "@Url.Action("CityHint","Search")",
            minLength: 2
        });
    });
</script>


<div id="logo-main">
    <img src="@Url.Content(Model)" id="header-photo" style="width:100%;height:400px;" />
    <div id="header-text" class="col-lg-8">Find the best hotel deals</div>
    <div id="searchPanel" class="jumbotron col-lg-8">
        @using (Html.BeginForm("Index", "Search", FormMethod.Get))
         {
            <div class="row">
                <div class="col-lg-8 col-lg-offset-1">
                    @Html.TextBox("city", (string)TempData["city"], new { @class = "form-control", @placeholder = "Search...", @id = "cityAutocomplete" })
                </div>
                <div class="col-lg-2 text-center">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
         }
    </div>
</div>
<br />


<style>
    #header-text {
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 50px;
        text-shadow: 2px 2px rgba(0, 0, 0, 0.9);
    }

    #searchPanel {
        position: absolute;
        top: 70%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 7px;
    }

    #logo-main {
        position: relative;
        text-align: center;
    }
</style>





